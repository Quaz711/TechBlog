<article>
    <a href="/dsahboard">&larr;Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" size="60" value="{{post.title}}"/>
        </div>

        <div>
            <textarea name="post-text" type="text">{{post.postText}}</textarea>
        </div>

        <div>
            <button type="submit">Save Post</button>
            <button class="delete-post-btn" type="button">Delete Post</button>
        </div>
    </form>
</article>

