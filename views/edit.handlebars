<article>
    <a href="/dashboard">&larr;Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <article class="post">
        <div class="title">
            <label for="post-title">Post Title:</label>
            <input name="post-title" id="post-title"type="text" value="{{post.title}}"/>
            <br></br>
            <label for="post-text">Post Text:</label>
            <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
        </div>
        </article>
        <button type="submit">Save Post</button>
        <button class="delete-post-btn" type="button">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div class="title">
        <label for="comment-body">Comment Text:</label>
        <textarea name="comment-body" id="comment-body"></textarea>
    </div>

    <button type="submit">Add Comment</button>
</form>

{{>comments post.comments}}

<script src="/scripts/comment.js"></script>
<script src="/scripts/delete.js"></script>
<script src="/scripts/edit.js"></script>