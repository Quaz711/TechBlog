<section>
    <a href="/dashboard">&larr;Dashboard</a>

    <ol class="post-list">
        <article class="post">
            <form class="edit-post-form">
                <div class="title">
                    <h2 style="text-align: left;min-width: 475px;margin: 8px;color: white">Edit Post</h2>
                </div>

                <div class="post-title-spot">
                    <label for="post-title">Post Title:</label>
                    <input name="post-title" id="post-title"type="text" value="{{post.title}}"/>
                </div>

                <div class="post-title-spot">
                    <label for="post-text">Post Text:</label>
                    <textarea type="text" id="post-text" name="post-text">{{post.post_text}}</textarea>
                </div> 
                
                <button type="submit">Update Post</button>
                <button type="button" class="delete-post-btn">Delete Post</button>
            </form>
        </article>
    </ol>
</section>

<section>
    <ol class="post-list">
        <article class="post">
            <form class="comment-form">
                <div class="title">
                    <h2 style="text-align: left;min-width: 475px;margin: 8px;color: white">COMMENT</h2>
                </div>

                <div class="post-title-spot">
                    <label for="comment-body">Comment:</label>
                    <textarea type="text" id="comment-body" name="comment-body"></textarea>
                </div>

                <button type="submit">Add Comment</button>
            </form>
        </article>
    </ol>
</section>

{{>comments post.comments}}

<script src="./scripts/comment.js"></script>
<script src="./scripts/delete.js"></script>
<script src="./scripts/edit.js"></script>