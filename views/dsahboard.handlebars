{{#if post.length}}
    <section>
        <h2>Your Posts</h2>
        <ol>
            {{#each posts as |post|}}
                <ul>
                    <article class="post">
                        <div class="title">
                            <a href="/post/{{id}}">{{title}}</a>
                        </div>

                        <div class="meta">
                            <strong>{{user.username}} posted this on {{formatDate create}}</strong>
                        </div>
                    </article>

                    <a class="edit-link" href="/dashboard/edit/{{post.id}}">Edit Post</a>
                </ul>
            {{/each}}
        </ol>
    </section>
{{/if}}

<div>
    <button type="submit">
        <a class="create-btn" href="/dashboard/newpost">Create New Post</a>
    </button>
</div>